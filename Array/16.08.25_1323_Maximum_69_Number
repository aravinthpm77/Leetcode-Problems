class Solution {
    public int maximum69Number (int num) {
        ArrayList<Integer> digits = splitNumber(num);
        for(int i=0;i<digits.size();i++){
            if(digits.get(i)==6){
                digits.set(i,9);
                break;    
            }
        }
        int result = 0;
        for (int d : digits) {
            result = result * 10 + d;
        }

        return result;
    }
    public ArrayList<Integer> splitNumber(int num){
        ArrayList<Integer> digits= new ArrayList<>();
        while(num>0){
            digits.add(num%10);
            num=num/10;
        }
        Collections.reverse(digits);
        return digits;
    }
}
